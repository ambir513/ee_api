{
  "compilerOptions": {
    /* Output */
    "outDir": "dist",
    "rootDir": "src",

    /* Node 22 + ESM */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* JS Target */
    "target": "ES2022",
    "lib": ["ES2022"],

    /* Interop */
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Type Safety */
    "strict": true,
    "skipLibCheck": true,

    /* Clean Output */
    "sourceMap": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
